{
    "manifest_version": 3, 
    "name": "HomeWork Pencil",
    "version": "1.0",
    "description": "a browser extension to speed up doing home work online",     
    "permissions": [
         "activeTab",
         "tabs",
         "storage"
    ],
    "action": {
        "default_title": "hw pencil",
        "default_popup": "popup.html",
        "default_icon": {
            "256": "icon256.png"
        }
    },
    
    "content_scripts": [
        {
            "matches": ["https://hegartymaths.com/assessment"],
            "js": ["hw-sites-scripts/hegarty.js"]
        }
    ],
    "icons": { 
        "256" : "icon256.png"
    },
    "background": {
        "service_worker": "background.js"
    }
  }