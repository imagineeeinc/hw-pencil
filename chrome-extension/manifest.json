{
    "manifest_version": 3, 
    "name": "HomeWork Pencil",
    "version": "1.0",
    "description": "a browser extension to speed up doing home work online",     
    "permissions": [
         "activeTab",
         "storage"
    ],
    "browser_action": {
        "default_title": "hw pencil",
        "default_popup": "popup.html",
        "default_icon": {
            "256": "icon256.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "css": ["main.css"],
            "js": ["background.js"]
        }
    ],
    "icons": { 
        "256" : "icon256.png"
    },
    "background": {
        "service_worker": "background.js"
    }
  }